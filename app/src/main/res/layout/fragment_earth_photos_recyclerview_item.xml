<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_xxx_small"
    app:cardCornerRadius="1dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_earth_photos_recyclerview_item_date_textview"
            style="@style/HeaderTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x_small"
            android:text="@string/date" />

        <TextView
            android:id="@+id/fragment_earth_photos_recyclerview_item_caption_textview"
            style="@style/BaseTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xx_small"
            android:text="@string/caption" />

        <ImageView
            android:id="@+id/fragment_earth_photos_recyclerview_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>