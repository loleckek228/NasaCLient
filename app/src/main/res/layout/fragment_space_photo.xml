<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/fragment_space_photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_space_photo_title_text_view"
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:gravity="center"
                android:text="@string/title" />

            <TextView
                android:id="@+id/fragment_space_photo_date_text_view"
                style="@style/BaseTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xxx_small"
                android:gravity="center"
                android:text="@string/date" />

            <TextView
                android:id="@+id/fragment_space_photo_explanation_text_view"
                style="@style/BaseTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_xxx_small"
                android:text="@string/explanation" />

            <ImageView
                android:id="@+id/fragment_space_photo_imageview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="@dimen/margin_xxx_small"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/loading_layout" />

</LinearLayout>