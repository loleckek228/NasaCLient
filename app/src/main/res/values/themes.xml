<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NasaClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NasaClient.NoActionBar" parent="Theme.NasaClient">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/color_text_header</item>
        <item name="android:textSize">@dimen/text_size_standard_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewButtonStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>